<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f000"
        tools:context=".CreateUserActivity"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/buttonheader"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/header"
                android:layout_gravity="center"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:text="SELECT MOTORBIKE MANUFACTURER..."
                android:textColor="#33FF66"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttondown"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/down"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonhonda"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/honda_oto" />
            <Button
                android:id="@+id/buttonyamaha"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/yamaha_icon" />
            <Button
                android:id="@+id/buttonsuzuki"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/suzuki_icon"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonpiaggio"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:background="@drawable/piaggio_blu" />
            <Button
                android:id="@+id/buttonkawasaki"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:background="@drawable/kawasaki4"/>
            <Button
                android:id="@+id/buttonkymco"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/kymco" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonbmw"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/bmw_logo" />
            <Button
                android:id="@+id/buttonsym"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/sym" />
            <Button
                android:id="@+id/buttonbenelli"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/benelli" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonktm"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/ktm" />
            <Button
                android:id="@+id/buttonducati"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/ducati" />
            <Button
                android:id="@+id/buttonaprilia"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/aprilia" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/mvagusta"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/mv_agusta" />
            <Button
                android:id="@+id/buttonhaley"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/haley2" />
            <Button
                android:id="@+id/royalenfield"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/royal_enfield" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <Button
                android:id="@+id/gpx"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/gpx" />
            <Button
                android:id="@+id/buttontriumph"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/triumph_logo" />
            <Button
                android:id="@+id/motoguzzi"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/moto_guzzi" />
        </LinearLayout>


